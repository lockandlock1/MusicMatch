<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/relativeLayout">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_profile"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/text_nick"
            android:layout_alignBottom="@+id/image_genre"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_toEndOf="@+id/image_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/text_date"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/text_nick"
            android:layout_alignStart="@+id/text_nick" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/image_genre"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/image_position"

            android:layout_alignBottom="@+id/text_nick"

            android:layout_toLeftOf="@+id/image_genre"
            android:layout_toStartOf="@+id/image_genre"
            android:layout_alignTop="@+id/image_genre" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_contents"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/image_content"
            android:layout_below="@+id/text_contents"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_like"
            android:layout_marginLeft="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_like"
            android:layout_toRightOf="@id/image_like" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id ="@+id/image_comment"
            android:layout_toRightOf="@+id/text_like"
            android:layout_marginLeft="26dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_comment"
            android:layout_toRightOf="@+id/image_comment"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp" />
    </RelativeLayout>
</RelativeLayout>