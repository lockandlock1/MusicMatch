<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login"
    tools:context=".Login.LoginActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:id="@+id/btn_login_email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/emailloginbut" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:id="@+id/btn_login_soundcloud"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/btn_login_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_login_email"
        android:layout_alignEnd="@+id/btn_login_email"
        android:background="@drawable/scloginbut" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/btn_login_google"
        android:layout_below="@+id/btn_login_soundcloud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_login_soundcloud"
        android:layout_alignEnd="@+id/btn_login_soundcloud"
        android:background="@drawable/gloginbut" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="뮤직앤매치가 처음이신가요?"
        android:id="@+id/textView1"
        android:layout_marginRight="8dp"
        android:layout_alignBaseline="@+id/text_join"
        android:layout_toLeftOf="@+id/text_join"
        android:layout_toStartOf="@+id/text_join" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:id="@+id/text_join"
        android:layout_below="@+id/btn_login_google"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
