<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_profile"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_nick"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile"
        android:layout_marginTop="16dp" />



    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_position"
        android:layout_alignParentTop="true"

        android:layout_toLeftOf="@+id/image_genre"
        android:layout_toStartOf="@+id/image_genre"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_genre"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_contents"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile"
        android:layout_below="@+id/image_position" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_date"

        android:layout_alignBottom="@+id/image_profile"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btn_edit"
        android:background="@drawable/ic_create_button"
        android:layout_toLeftOf="@+id/btn_del"
        android:layout_toStartOf="@+id/btn_del"
        android:layout_alignBottom="@+id/text_date"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btn_del"
        android:background="@drawable/ic_delete_button"
        android:layout_alignBottom="@+id/text_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp" />


</RelativeLayout>